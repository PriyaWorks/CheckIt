<Window x:Class="CheckIt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CheckIt"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="MainWindow" Height="700" Width="400">
    <Grid>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" 
                   Height="50" Stroke="Black" 
                   VerticalAlignment="Top" Width="400"/>
        <Label FontFamily ="Arial" FontSize="26" Content="CheckIT" 
               HorizontalAlignment="Left" Margin="132,0,0,0" 
               VerticalAlignment="Top" Height="50" Width="129"/>
        <Label Content="Select Topic:" FontFamily ="Arial"
               FontSize="18" HorizontalAlignment="Left" 
               Margin="14,75,0,0" VerticalAlignment="Top" 
               Width="108"/>
        <ComboBox Name="Cbx_TopicName" FontFamily ="Arial"
                  HorizontalAlignment="Left" FontSize="16"
                  Margin="132,75,0,0" 
                  VerticalAlignment="Top" Width="218" 
                  Height="33" 
                  SelectionChanged="Cbx_TopicName_SelectionChanged"/>
        <Button Name="Btn_Breadcrum" Content="=" 
                HorizontalAlignment="Left" Margin="348,10,0,0" 
                VerticalAlignment="Top" Width="20" 
                RenderTransformOrigin="-0.027,0.25" 
                Click="Btn_Breadcrum_Click"/>
        <Button Name="btn_StartCheckIt" Content="Start CheckIt" 
                HorizontalAlignment="Left" FontFamily="Arial"
                Margin="143,592,0,0" VerticalAlignment="Top" 
                Width="118" Height="44" FontSize="16"
                Click="Btn_StartCheckIt_Click"/>
        <ListBox Name="Lbx_Questionlist" HorizontalAlignment="Stretch"
                 Margin="21,145,23.6,110.4">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="10" SharedSizeGroup="Column1" />
                            <ColumnDefinition Width="Auto" SharedSizeGroup="Column2" />
                        </Grid.ColumnDefinitions>
                        <TextBlock FontFamily="Arial" FontSize="14" Grid.Column="0" Text="" />
                        <TextBlock FontFamily="Arial" FontSize="14" Grid.Column="1" Text="" />
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

    </Grid>
</Window>
