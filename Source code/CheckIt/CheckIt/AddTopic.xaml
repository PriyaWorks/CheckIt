<Window x:Class="CheckIt.AddTopic"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CheckIt"
        mc:Ignorable="d"
        Title="AddTopic" Height="350" Width="350">
    <Grid>
        <Label FontFamily ="Arial" FontSize="18" 
               Content="Add Topic" HorizontalAlignment="Left"
               Margin="27,60,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.484,1.604" Width="113" Height="40"/>

        <TextBox FontFamily ="Arial" FontSize="16" Name="TopicName"
                 HorizontalAlignment="Left" Height="55" 
                 Margin="27,105,0,0" TextWrapping="Wrap"  
                 VerticalAlignment="Top" Width="268" 
                 RenderTransformOrigin="0.598,-0.478"/>
        <Button Name="Btn_AddTopic" Content="Add Topic" 
                HorizontalAlignment="Left" 
                Margin="195,206,0,0" 
                VerticalAlignment="Top"
                Width="100" Click="Btn_AddTopic_Click" 
              
                Height="39"/>
    </Grid>
</Window>
